void tree()
{
	int a,d,b,e,f,j;
	int h = 7;
	int c = 0;
	int x = 0;
	char background = ' ';//空白背景填充
	char snow = '*';//雪花填充
	char foliage = '0';//树主题填充
	char ground = '-';//地面填充

	//打印树叶同时打印背景
	for (a = 0; a < 3; a++)//树的总层数（大
	{
		b = 3 + c;
		for (d = 1; d <= b; d++)//每一层树叶（大）所需要的层数（排
		{
			for (e = 0; e < 80; e++)//在一排上判断
			{
				if ((e <= 25 + x) && (e >= 25 - x))//判断打印树叶
				{
					printf("%c", foliage);
					Sleep(60);//睡一下
				}
				else if (((e >= 25 + x) && (e % h == 0))|| ((e <= 25 - x)&&(e%h==0)))//判断打印雪花//判断不是打印树叶的地方
				{
					printf("%c", snow);
					Sleep(60);//睡一下
					if (h % 2 == 0)//使雪花更有层次感
						h++;
					else
						h--;

				}
				else//判断是否打印背景
				{
					printf("%c", background);
				}
				
			}
			x = x + 2;//改变变量大小，调整上面每层需要打印的
			printf("\n");//切换行
			h++;
			h = h % 9;
			if (h == 0)
				h = 5;
			//使雪花更有层次感				
		}
		x = x - 4;//使圣诞树更有层次感
		c++;
	}
	//打印树干
	for (a = 6; a > 0;a--)
	{
		for (b = 0; b < 3; b++)
		{
			for (e = 0; e < 80; e++)//在一排上判断
			{
				if ((e > 22) && (e < 25))//判断打印树干
				{
					for (b=1; b<=3; b++)
					{
						printf("%c", foliage);
						Sleep(60);
					}
				}
				else if (((e >= 25) && (e % h == 0)) || ((e <= 22 ) && (e % h == 0)))//判断打印雪花//判断不是打印树叶的地方
				{
					printf("%c", snow);
					Sleep(60);//睡一下
					if (h % 2 == 0)//使雪花更有层次感
						h++;
					else
						h--;

				}
				else//判断是否打印背景
				{
					printf("%c", background);
				}
			}			
			printf("\n");//切换行
			h++;
			h = h % 9;
			if (h == 0)
				h = 5;
			//使雪花更有层次感				
		}
	}
	//打印地面
	for (a = 0; a <= 3; a++)
	{
		for (e = 0; e < 80; e++)
		{
			printf("%c", ground);
		}
		printf("\n");
	}
}










