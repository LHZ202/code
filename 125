int main()
{
	int n = 0;
	int a, b;
	int c = 2;
	int e = 0;
	printf("请输入该金字塔高度：");
	scanf_s("%d", &n);



	for (a = 1; a <= n; a++)
	{
		for (b = 0; b < n - a; b++)
		{
			printf(" ");
		}
		
		for (b=0,c=c;b<(c+e-1);b++)
		{
			printf("*");
			
		}
		c++;
		e++;
		b=0;
		printf("\n");
	}
	return 0;
}
